<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        android:text="Rental Iphone Murah Banget"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:text="   Iphone Tersedia : " />

    <RadioGroup
        android:id="@+id/iprg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/ip15rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iphone 15 Pro Max" />

        <RadioButton
            android:id="@+id/ip15prorb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iphone 15 pro" />

        <RadioButton
            android:id="@+id/ip14rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iphone 14 Pro Max" />

        <RadioButton
            android:id="@+id/ip14prorb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iphone 14 Pro" />

        <RadioButton
            android:id="@+id/ip13rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iphone 13 Pro Max" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:text="   Tambahan Barang : " />
    <RadioGroup
        android:id="@+id/tambahanrg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/airrb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Air Pods" />

        <RadioButton
            android:id="@+id/casrb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cassing" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:text="   Berapa Hari Rental : " />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mau Berapa Hari?">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rentDayset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/confirmbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Pesan" />
</LinearLayout>